{
  "name": "@itinapp/db",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "build": "prisma generate",
    "watch": "tsc -w",
    "dev": "tsx src/index.ts",
    "db:studio": "prisma studio",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:deploy": "prisma migrate deploy",
    "db:pull": "prisma db pull",
    "db:seed": "tsx prisma/seed.ts",
    "db:seed:test": "tsx prisma/seed-test.ts",
    "db:reset": "prisma migrate reset --force",
    "test": "echo 'No tests in db package' && exit 0",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@itinapp/env": "workspace:*",
    "@itinapp/schemas": "workspace:*",
    "@prisma/adapter-pg": "catalog:",
    "@prisma/client": "catalog:",
    "pg": "catalog:"
  },
  "devDependencies": {
    "@itinapp/configs": "workspace:*",
    "@types/node": "catalog:",
    "@types/pg": "catalog:",
    "dotenv": "catalog:",
    "prisma": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:"
  }
}
