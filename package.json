{
  "name": "itinapp-root",
  "version": "0.0.0",
  "private": true,
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "build": "turbo run build --ui=stream",
    "build:ci": "pnpm turbo run build:ci",
    "build:local": "dotenv -e .env -- turbo run build --ui=stream",
    "dev": "dotenv -e .env -- pnpm turbo run dev",
    "lint": "turbo run lint --ui=stream",
    "clean": "turbo run clean --ui=stream",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "postinstall": "turbo run db:generate",
    "db:migrate": "dotenv -e .env -- pnpm turbo run db:migrate",
    "db:deploy": "dotenv -e .env -- pnpm turbo run db:deploy",
    "db:push": "dotenv -e .env -- pnpm turbo run db:push",
    "db:seed": "dotenv -e .env -- pnpm turbo run db:seed",
    "db:seed:test": "dotenv -e .env -- pnpm turbo run db:seed:test",
    "db:studio": "dotenv -e .env -- pnpm turbo run db:studio",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "prepare": "husky",
    "commit": "cz",
    "test": "dotenv -e .env -- turbo run test --ui=stream",
    "test:e2e": "dotenv -e .env -- turbo run test:e2e --ui=stream -- --project=chromium",
    "type-check": "turbo run type-check --ui=stream"
  },
  "packageManager": "pnpm@10.26.2",
  "devDependencies": {
    "@itinapp/configs": "workspace:*",
    "@commitlint/cli": "catalog:",
    "@commitlint/config-conventional": "catalog:",
    "@trivago/prettier-plugin-sort-imports": "catalog:",
    "commitizen": "catalog:",
    "cz-conventional-changelog": "catalog:",
    "dotenv-cli": "catalog:",
    "eslint": "catalog:",
    "husky": "catalog:",
    "lint-staged": "^16.2.7",
    "prettier": "catalog:",
    "prettier-plugin-tailwindcss": "catalog:",
    "turbo": "catalog:"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  }
}
