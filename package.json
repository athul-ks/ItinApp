{
  "name": "itinapp-root",
  "version": "0.0.0",
  "private": true,
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "build": "pnpm turbo run build --log-order=grouped --",
    "build:ci": "pnpm turbo run build:ci",
    "build:local": "dotenv -e .env -- pnpm turbo run build",
    "dev": "dotenv -e .env -- pnpm turbo run dev",
    "lint": "pnpm turbo run lint --log-order=grouped --",
    "clean": "pnpm turbo run clean --log-order=grouped --",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "postinstall": "pnpm turbo run db:generate",
    "db:migrate": "dotenv -e .env -- pnpm turbo run db:migrate",
    "db:deploy": "dotenv -e .env -- pnpm turbo run db:deploy",
    "db:push": "dotenv -e .env -- pnpm turbo run db:push",
    "db:seed": "dotenv -e .env -- pnpm turbo run db:seed",
    "db:seed:test": "dotenv -e .env -- pnpm turbo run db:seed:test",
    "db:studio": "dotenv -e .env -- pnpm turbo run db:studio",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "prepare": "husky",
    "commit": "cz",
    "test": "dotenv -e .env -- pnpm turbo run test --log-order=grouped -- --coverage",
    "test:e2e": "dotenv -e .env -- pnpm turbo run test:e2e --log-order=grouped --",
    "type-check": "pnpm turbo run type-check --log-order=grouped --"
  },
  "packageManager": "pnpm@10.26.2",
  "devDependencies": {
    "@commitlint/cli": "catalog:",
    "@commitlint/config-conventional": "catalog:",
    "@trivago/prettier-plugin-sort-imports": "catalog:",
    "commitizen": "catalog:",
    "cz-conventional-changelog": "catalog:",
    "dotenv-cli": "catalog:",
    "eslint": "catalog:",
    "husky": "catalog:",
    "prettier": "catalog:",
    "prettier-plugin-tailwindcss": "catalog:",
    "turbo": "catalog:"
  }
}
